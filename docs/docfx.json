{
  "metadata": [
    {
      "src": [
        {
          "src": "../Xunit.Extensions.Ordering",
          "files": ["**/**.csproj"],
          "exclude": ["**/bin/**", "**/obj/**"]
        }
      ],
      "dest": "./code"
    }
  ],
  "build": {
    "content": [
      {
        "files": ["**/*.md", "**/*.yml"]
      }
    ],
    "resource": [
      {
        "files": ["**.png"]
      }
    ],
    "overwrite": "specs/*.md",
    "globalMetadata": {
      "_appTitle": "Dangl.Xunit.Extensions.Ordering Documentation",
      "_appFooter": "&copy; <a href=\"https://www.dangl-it.com\" target=\"_blank\">Dangl IT GmbH</a>",
      "_appLogoPath": "app-logo.png",
      "_appFaviconPath": "app-logo.png",
      "_enableSearch": true,
      "_gitUrlPattern": "github"
    },
    "dest": "../output/docs",
    "template": ["default", "template"]
  }
}
